OBJ = $(wildcard src/*.o)

package:
	@echo "Generating autotool scripts..."
	@aclocal; automake --add-missing; autoconf;

before_dist: clean package
	@echo "Cleaning directories before distribution"
	@rm autom4te.cache -rf
	@rm config.log -f
	@rm config.status -f

clean:
	@echo "Cleaning directories"
	@rm autom4te.cache -rf
	@rm src/.deps -rf
	@rm src/Makefile -f 
	@rm src/Makefile.in -f
	@rm Makefile -f 
	@rm Makefile.in -f
	@rm aclocal.m4 -f 
	@rm config.log -f 
	@rm config.status -f
	@rm configure -f
	@rm depcomp -f 
	@rm install-sh -f
	@rm missing -f
	@rm $(OBJ) -f
	@rm src/bluelock -f
	@rm ~/.bluelock -rf

all: before_dist
	@echo "Configuring and running make..."
	./configure && make


